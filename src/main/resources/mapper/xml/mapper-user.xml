    <insert id="saveUser" parameterType="user" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
            account, 
            password, 
            name,
            profile_img_id,
            create_dt,
            update_dt
        ) VALUES (
            #{account},
            #{password},
            #{name},
            #{profileImgId},
            #{createDt},
            #{updateDt}
        ) 
        ON DUPLICATE KEY UPDATE 
        profile_img_id = #{profileImgId}, 
        name = #{name},
        update_dt = #{updateDt}
    </insert>
    
